<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.thoughtcrime.securesms.webrtc.IsUserLegitimate">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_alignParentTop="true"
        android:text="@string/how_confident"
        android:textSize="24sp"
        android:gravity="center" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dip"
        android:layout_height="200dip"
        android:layout_centerInParent="true"
        android:adjustViewBounds="false"
        android:scaleType="fitXY"
        android:src="@drawable/ic_contact_picture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/separator_padding"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="323dp">

        <Button
            android:id="@+id/verifyImageYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@color/signal_primary"
            android:padding="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="200dp"
            android:layout_margin="10dp"
            android:text="@string/yes"
            android:theme="@style/InfoButton" />


        <Button
            android:id="@+id/verifyImageNotSure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@color/signal_primary"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:paddingLeft="200dp"
            android:paddingRight="15dp"
            android:text="@string/not_sure"
            android:textColor="@color/white"
            tools:layout_editor_absoluteX="270dp"
            tools:layout_editor_absoluteY="386dp" />


        <Button
            android:id="@+id/verifyImageNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@color/signal_primary"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:paddingLeft="200dp"
            android:paddingRight="200dp"
            android:text="@string/no"
            android:textColor="@color/white"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="386dp" />

    </LinearLayout>


</RelativeLayout>