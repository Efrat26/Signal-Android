<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.thoughtcrime.securesms.biu.HiddenContact.ExperimentManager">

    <TextView
        android:id="@+id/textView_manager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:layout_alignParentTop="true"
        android:text="@string/experiment_name"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/separator_padding"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_below="@id/textView_manager">

        <Button
            android:id="@+id/manager_send"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:background="@color/signal_primary"
            android:padding="10dp"
            android:textColor="@color/white"
            android:text="@string/send_command"/>

        <Button
            android:id="@+id/manager_stat"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:background="@color/signal_primary"
            android:padding="10dp"
            android:textColor="@color/white"
            android:text="@string/stat"/>
    </LinearLayout>
</RelativeLayout>
